# Logstash Config for <%= @name %>
#
# Generated by Chef

<%= @type %> {
  <%= @plugin %> {
    <% @fields.each do |k, v| -%>
    <% if v.is_a? String || v.is_a? Symbol -%>
    <%= k %> => "<%= v %>"
    <% elsif v.is_a? Array -%>
    <%= k %> => <%= v %>
    <% elsif v.is_a? Hash -%>
    <%= k %> => <%= v.to_a.flatten %>
    <% end -%>
    <% end -%>
  }
}
