#!/bin/bash

cd <%= node['logstash']['install_path'] %>
exec 2>&1
ulimit -n 32000
exec chpst -u <%= node['logstash']['user_login'] %> java -jar logstash-monolithic.jar agent -f <%= node['logstash']['config_path'] %> <% if  node['logstash']['pattern_path'] -%>--grok-patterns-path <%= node['logstash']['pattern_path'] %><% end -%>
